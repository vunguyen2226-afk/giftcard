<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <!-- Traditional template preview -->
  <defs>
    <linearGradient id="traditional-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#dc2626;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#b91c1c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#991b1b;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="400" height="300" fill="url(#traditional-bg)"/>

  <!-- Decorative border -->
  <rect x="20" y="20" width="360" height="260" fill="none" stroke="#fbbf24" stroke-width="3" rx="8"/>
  <rect x="30" y="30" width="340" height="240" fill="none" stroke="#fbbf24" stroke-width="1" opacity="0.5" rx="6"/>

  <!-- Corner ornaments -->
  <circle cx="40" cy="40" r="8" fill="#fbbf24" opacity="0.6"/>
  <circle cx="360" cy="40" r="8" fill="#fbbf24" opacity="0.6"/>
  <circle cx="40" cy="260" r="8" fill="#fbbf24" opacity="0.6"/>
  <circle cx="360" cy="260" r="8" fill="#fbbf24" opacity="0.6"/>

  <!-- Title -->
  <text x="200" y="80" font-family="serif" font-size="24" font-weight="bold" fill="#fbbf24" text-anchor="middle">Happy New Year</text>
  <text x="200" y="105" font-family="serif" font-size="12" fill="#fde68a" text-anchor="middle">Chúc Mừng Năm Mới</text>

  <!-- Divider lines -->
  <line x1="150" y1="130" x2="250" y2="130" stroke="#fbbf24" stroke-width="1"/>
  <circle cx="200" cy="130" r="3" fill="#fbbf24"/>

  <!-- Message text -->
  <text x="200" y="160" font-family="serif" font-size="14" fill="white" text-anchor="middle">Traditional Tet Theme</text>
  <text x="200" y="180" font-family="serif" font-size="12" fill="#fde68a" text-anchor="middle" opacity="0.8">Red &amp; Gold • Classic Design</text>

  <!-- Divider lines -->
  <line x1="150" y1="210" x2="250" y2="210" stroke="#fbbf24" stroke-width="1"/>
  <circle cx="200" cy="210" r="3" fill="#fbbf24"/>

  <!-- Footer -->
  <rect x="150" y="230" width="100" height="30" fill="#fbbf24" fill-opacity="0.2" rx="4"/>
  <text x="200" y="250" font-family="serif" font-size="12" fill="#fde68a" text-anchor="middle">Sender Name</text>
</svg>
