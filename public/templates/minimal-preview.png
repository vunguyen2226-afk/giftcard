<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <!-- Minimal template preview -->

  <!-- Background - clean off-white -->
  <rect width="400" height="300" fill="#fafaf9"/>

  <!-- Subtle corner accents -->
  <line x1="50" y1="50" x2="80" y2="50" stroke="#171717" stroke-width="0.5" opacity="0.2"/>
  <line x1="50" y1="50" x2="50" y2="80" stroke="#171717" stroke-width="0.5" opacity="0.2"/>

  <line x1="320" y1="250" x2="350" y2="250" stroke="#171717" stroke-width="0.5" opacity="0.2"/>
  <line x1="350" y1="220" x2="350" y2="250" stroke="#171717" stroke-width="0.5" opacity="0.2"/>

  <!-- Recipient - small and understated -->
  <text x="200" y="80" font-family="sans-serif" font-size="9" font-weight="500" fill="#a3a3a3" text-anchor="middle" letter-spacing="3">FOR</text>
  <text x="200" y="100" font-family="sans-serif" font-size="16" font-weight="300" fill="#404040" text-anchor="middle">Recipient</text>

  <!-- Accent line -->
  <rect x="170" y="125" width="60" height="1" fill="#171717" opacity="0.3"/>

  <!-- Message as focal point - large text -->
  <text x="200" y="165" font-family="sans-serif" font-size="22" font-weight="300" fill="#171717" text-anchor="middle">Minimal Design</text>
  <text x="200" y="190" font-family="sans-serif" font-size="11" font-weight="300" fill="#737373" text-anchor="middle">Clean • Whitespace • Typography</text>

  <!-- Small accent dot -->
  <circle cx="200" cy="210" r="2" fill="#171717" opacity="0.3"/>

  <!-- Sender - small and understated -->
  <text x="200" y="240" font-family="sans-serif" font-size="9" font-weight="500" fill="#a3a3a3" text-anchor="middle" letter-spacing="3">FROM</text>
  <text x="200" y="260" font-family="sans-serif" font-size="14" font-weight="400" fill="#171717" text-anchor="middle">Sender</text>
</svg>
