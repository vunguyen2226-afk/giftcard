<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <!-- Animated template preview -->
  <defs>
    <linearGradient id="animated-bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:1" />
      <stop offset="25%" style="stop-color:#06b6d4;stop-opacity:0.9" />
      <stop offset="50%" style="stop-color:#0ea5e9;stop-opacity:0.7" />
      <stop offset="75%" style="stop-color:#06b6d4;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#0ea5e9;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="glow">
      <stop offset="0%" style="stop-color:white;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:white;stop-opacity:0" />
    </radialGradient>
  </defs>

  <!-- Background -->
  <rect width="400" height="300" fill="url(#animated-bg)"/>

  <!-- Floating particles -->
  <circle cx="80" cy="50" r="3" fill="white" opacity="0.6">
    <animate attributeName="cy" values="50;40;50" dur="3s" repeatCount="indefinite"/>
  </circle>
  <circle cx="150" cy="80" r="2" fill="white" opacity="0.5">
    <animate attributeName="cy" values="80;70;80" dur="4s" repeatCount="indefinite"/>
  </circle>
  <circle cx="320" cy="100" r="3" fill="white" opacity="0.6">
    <animate attributeName="cy" values="100;90;100" dur="3.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="100" cy="200" r="2" fill="white" opacity="0.5">
    <animate attributeName="cy" values="200;190;200" dur="4.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="300" cy="230" r="3" fill="white" opacity="0.6">
    <animate attributeName="cy" values="230;220;230" dur="3.8s" repeatCount="indefinite"/>
  </circle>

  <!-- Pulsing glow effect -->
  <circle cx="200" cy="150" r="120" fill="url(#glow)" opacity="0.2">
    <animate attributeName="opacity" values="0.1;0.3;0.1" dur="3s" repeatCount="indefinite"/>
  </circle>

  <!-- Content with entrance effect suggestion -->
  <g opacity="0.9">
    <text x="200" y="70" font-family="sans-serif" font-size="32" font-weight="900" fill="white" text-anchor="middle">Happy</text>
    <text x="200" y="110" font-family="sans-serif" font-size="38" font-weight="900" fill="white" text-anchor="middle">New Year</text>
  </g>

  <!-- Recipient -->
  <g opacity="0.9">
    <text x="200" y="145" font-family="sans-serif" font-size="9" font-weight="600" fill="white" opacity="0.8" text-anchor="middle" letter-spacing="2">TO</text>
    <text x="200" y="165" font-family="sans-serif" font-size="18" font-weight="bold" fill="white" text-anchor="middle">Recipient</text>
  </g>

  <!-- Message box with glow -->
  <rect x="100" y="185" width="200" height="50" fill="white" fill-opacity="0.15" rx="12" stroke="white" stroke-opacity="0.3" stroke-width="1">
    <animate attributeName="stroke-opacity" values="0.2;0.4;0.2" dur="2s" repeatCount="indefinite"/>
  </rect>
  <text x="200" y="208" font-family="sans-serif" font-size="13" fill="white" text-anchor="middle">Dynamic Effects</text>
  <text x="200" y="225" font-family="sans-serif" font-size="10" fill="white" opacity="0.8" text-anchor="middle">Motion • Glow • Animation</text>

  <!-- Sender -->
  <g opacity="0.9">
    <text x="200" y="255" font-family="sans-serif" font-size="9" font-weight="600" fill="white" opacity="0.8" text-anchor="middle" letter-spacing="2">WITH LOVE FROM</text>
    <text x="200" y="275" font-family="sans-serif" font-size="16" font-weight="bold" fill="white" text-anchor="middle">Sender</text>
  </g>
</svg>
